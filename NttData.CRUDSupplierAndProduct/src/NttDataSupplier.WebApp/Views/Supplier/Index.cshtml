@model PaginationViewModel<SupplierViewModel>

@{
    ViewData["Title"] = "Fornecedores";
}

<a asp-action="New" class="btn btn-primary">Add Fornecedor</a>

<br />
<br />

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nome fantasia</th>
            <th scope="col">Razão/Nome</th>
            <th scope="col">Cnpj/Cpf</th>
            <th scope="col">Cadastro</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.List)
        {
            <tr>
                <th>@item.FantasyName</th>
                <td>@item.GetFullNameOrCompanyName()</td>
                <td>@item.GetCnpjOrCpf()</td>                
                <td>@item.InsertDate</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>