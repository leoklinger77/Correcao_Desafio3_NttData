@model NewCategoryViewModel
@{
    ViewData["Title"] = "Nova Categoria";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="New" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Nome da categoria">
            <span asp-validation-for="Name" class="alert-danger"></span>
        </div>        
    </div>    
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>


@section Scripts {

            @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

}

