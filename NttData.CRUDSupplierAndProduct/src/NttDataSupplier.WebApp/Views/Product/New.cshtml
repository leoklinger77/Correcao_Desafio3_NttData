@model NewProductViewModel
@{
    ViewData["Title"] = "Novo Produto";
}

<h1>@ViewData["Title"]</h1>

<br />
<vc:summary></vc:summary>

<form asp-action="New" method="post" enctype="multipart/form-data">

    <div class="form-row">
        <div class="form-group col-md-10">
            <label asp-for="Supplier"></label>
            <select asp-for="SupplierId" asp-items="@(new SelectList(Model.ListSupplier,"Id","FantasyName"))" class="form-control">
                <option></option>
            </select>
            <span asp-validation-for="SupplierId" class="alert-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-10">
            <label asp-for="Category"></label>
            <select asp-for="CategoryId" asp-items="@(new SelectList(Model.ListCategory,"Id","Name"))" class="form-control">
                <option></option>
            </select>
            <span asp-validation-for="CategoryId" class="alert-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-5">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control">
            <span asp-validation-for="Name" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-5">
            <label asp-for="BarCode"></label>
            <input asp-for="BarCode" type="text" class="form-control">
            <span asp-validation-for="BarCode" class="alert-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="PricePurchase"></label>
            <input asp-for="PricePurchase" type="text" class="form-control">
            <span asp-validation-for="PricePurchase" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="PriceSales"></label>
            <input asp-for="PriceSales" type="text" class="form-control">
            <span asp-validation-for="PriceSales" class="alert-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="QuantityStock"></label>
            <input asp-for="QuantityStock" type="text" class="form-control">
            <span asp-validation-for="QuantityStock" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" asp-for="Active" checked>
                <label class="form-check-label" asp-for="Active">Ativo</label>
            </div>
        </div>
    </div>
    <div class="row imagens">

        <div class="col-md-2">
            <input asp-for="ImageOne" type="file" class="input-file" />
            <img src="~/images/@Model.GetImageOne()" class="img-thumbnail img-upload" id="previewImageOne" />
            <div class=" btn btn-danger btn-image-excluir">Excluir</div>            
            <span asp-validation-for="ImageOne" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <input asp-for="ImageTwo" type="file" class="input-file" />
            <img src="~/images/@Model.GetImageTwo()" class="img-thumbnail img-upload"  id="previewImageTwo" />
            <div class=" btn btn-danger btn-image-excluir">Excluir</div> 
            <span asp-validation-for="ImageTwo" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <input asp-for="ImageTree" type="file" class="input-file" />
            <img src="~/images/@Model.GetImageTree()" class="img-thumbnail img-upload" id="previewImageTree" />
            <div class=" btn btn-danger btn-image-excluir">Excluir</div>   
            <span asp-validation-for="ImageTree" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <input asp-for="ImageFor" type="file" class="input-file" />
            <img src="~/images/@Model.GetImageFor()" class="img-thumbnail img-upload" id="previewImageFor" />
            <div class=" btn btn-danger btn-image-excluir">Excluir</div> 
            <span asp-validation-for="ImageFor" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <input asp-for="ImageFive" type="file" class="input-file" />
            <img src="~/images/@Model.GetImageFive()" class="img-thumbnail img-upload" id="previewImageFive" />
            <div class=" btn btn-danger btn-image-excluir">Excluir</div>  
            <span asp-validation-for="ImageFive" class="text-danger"></span>
        </div>
    </div>

    <br />

    <button type="submit" class="btn btn-success">Cadastrar</button>
    <a asp-action="Index" class="btn btn-primary">Voltar para lista</a>
</form>


@section Scripts {

            @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

}
