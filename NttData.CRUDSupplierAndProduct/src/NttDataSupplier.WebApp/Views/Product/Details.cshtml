@model ProductViewModel
@{
    ViewData["Title"] = "Novo Produto";
}

<h1>@ViewData["Title"]</h1>

<br />
<vc:summary></vc:summary>



<div class="form-row">
    <div class="form-group col-md-10">
        <label asp-for="Supplier"></label>
        <input asp-for="Supplier.FantasyName" type="text" class="form-control">
        <span asp-validation-for="SupplierId" class="alert-danger"></span>
    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-10">
        <label asp-for="Category"></label>
        <input asp-for="Category.Name" type="text" class="form-control">
        <span asp-validation-for="CategoryId" class="alert-danger"></span>
    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-5">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control">
        <span asp-validation-for="Name" class="alert-danger"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="BarCode"></label>
        <input asp-for="BarCode" type="text" class="form-control">
        <span asp-validation-for="BarCode" class="alert-danger"></span>
    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-3">
        <label asp-for="PricePurchase"></label>
        <input asp-for="PricePurchase" type="text" class="form-control">
        <span asp-validation-for="PricePurchase" class="alert-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="PriceSales"></label>
        <input asp-for="PriceSales" type="text" class="form-control">
        <span asp-validation-for="PriceSales" class="alert-danger"></span>
    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-3">
        <label asp-for="QuantityStock"></label>
        <input asp-for="QuantityStock" type="text" class="form-control">
        <span asp-validation-for="QuantityStock" class="alert-danger"></span>
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-6">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" asp-for="Active" checked>
            <label class="form-check-label" asp-for="Active">Ativo</label>
        </div>
    </div>
</div>
<div class="row imagens">

    <div class="col-md-2">

        <img src="~/images/@Model.GetImageOne()" class="img-thumbnail " id="previewImageOne" />
    </div>

    <div class="col-md-2">

        <img src="~/images/@Model.GetImageTwo()" class="img-thumbnail " id="previewImageTwo" />
    </div>

    <div class="col-md-2">

        <img src="~/images/@Model.GetImageTree()" class="img-thumbnail " id="previewImageTree" />
    </div>

    <div class="col-md-2">

        <img src="~/images/@Model.GetImageFor()" class="img-thumbnail " id="previewImageFor" />
    </div>

    <div class="col-md-2">

        <img src="~/images/@Model.GetImageFive()" class="img-thumbnail " id="previewImageFive" />
    </div>
</div>

<br />


<a asp-action="Index" class="btn btn-primary">Voltar para lista</a>



@section Scripts {

            @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

}
